<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#FF0000" android:startColor="#FFFFFF" android:type="linear"/>
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
            <size android:width="60dp" android:height="60dp"/>
            <stroke android:width="1dp" android:color="#F9FCFF"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#FFFFFF" android:startColor="#A4FCF1" android:type="linear"/>
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
            <size android:width="60dp" android:height="60dp"/>
            <stroke android:width="0.5dp" android:color="#96A3FA"/>
        </shape>
    </item>
</selector>